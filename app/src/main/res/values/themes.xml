<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroupChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- The primary brand color of your app, used most predominantly in theming -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- A lighter/darker variant of your primary brand color, used sparingly in theming -->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <!-- The color used for elements displayed on top of your primary colors,
         mostly text & icons -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- The secondary brand color of your app, used mostly as an accent for certain widgets
         that need to stand out -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- A lighter/darker variant of your secondary brand color, used sparingly in theming -->
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <!-- The color used for elements displayed on top of your secondary colors -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- The color used for errors (often a shade of red) -->
        <item name="colorError">#F44336</item>
        <!-- The color used for elements displayed on top of your error color -->
        <item name="colorOnError">#FFFFFF</item>
        <!-- The color used for surfaces (i.e. Material “sheets”) -->
        <item name="colorSurface">@color/colorSurface</item>
        <!-- The color used for elements displayed on top of your surface color -->
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- The color behind all other screen content -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- The color used for elements displayed on top of your background color -->
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Set Toolbar style -->
        <item name="toolbarStyle">@style/Theme.Toolbar</item>

        <!-- Set status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- For circular Image -->
    <style name="CircularImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- For Toolbar -->
    <style name="Theme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Toolbar.WithBackNavigation" parent="Theme.Toolbar">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <!-- For TextViews -->
    <style name="TextAppearance.AppCompat.Medium.Dark" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>
    <style name="TextAppearance.AppCompat.Small.Dark" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>
</resources>